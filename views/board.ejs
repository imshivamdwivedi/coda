    <body>
      <style>
        body{
          background-color: #ffffff;
        }
        nav a{
         margin-left: 45%;
        }
        .pagination{
          padding-top: 0.5%;
          margin-left: 40%;
        }
        .sort{
          float: right;
          margin-top: 1%;
          margin-right: 1%;
        }
        .previous{
          float: left;
          margin-top: 1%;
          margin-left: 1%;
        }
      </style>
        <section>
          <nav class="navbar navbar-expand-lg navbar-dark indigo mb-4 text-center">
            <a class="navbar-brand " href="#"><i class="fa fa-trophy mt-1" aria-hidden="true"></i>XÃ†A-12 HackerCup</a>
          </nav>
          <a href="/" class=" btn btn-dark previous">&laquo; Home</a>
          <%if(current){%>
            <form action="/leaderBoard/<%=current%>/sortByName" class="sort">
              <button type="submit" class="btn btn-danger " data-color="dark">Sort By Name</button>
            </form> 
          <%}  %>
        </section>
        <marquee><h2 class="text-danger mt-1">Live LeaderBoard !</h2></marquee>
        </section> 
        <section>
          <form action="/search" method="POST">
            <input class="form-control mt-0 text-center" id="tableSearch" type="text"
             placeholder="Search Team Name" name="team_name">
          </form>  
          <table class="striped centered responsive-table mt-5">
            <thead>
              <tr>
                  <th>Team Name</th>
                  <th>Wins</th>
                  <th>Lost</th>
                  <th>Draw</th>
                  <th>Total Points</th>
              </tr>
            </thead>
    
            <tbody>
              <% for(var i=0; i < docs.length; i++) { %>
                <tr>
                 
                  <% if (current == 1 && i==0) { %>
                    <td><%=docs[i].team_name%>
                      <span class=" badge green text-white"> On Top</span> </td>
                  <% } else { %>
                    <td ><%=docs[i].team_name%></td>
                  <% } %>
                  
                  <td><%=docs[i].wins%></td>
                  <td><%=docs[i].losses%></td>
                  <td><%=docs[i].ties%></td>
                  <td><%=docs[i].score%></td>
                </tr>
             <% } %>    
            </tbody>
          </table>
          <% if (pages > 0) { %>
            <ul class="pagination text-center">
                <% if (current == 1) { %>
                    <li class="disabled"><a>First</a></li>
                <% } else { %>
                    <li><a href="/leaderboard/1">First</a></li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="active"><a><%= i %></a></li>
                    <% } else { %>
                        <li><a href="/leaderboard/<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="disabled"><a>...</a></li>
                    <% } %>
                <% } %>
                <% if (current == pages) { %>
                    <li class="disabled"><a>Last</a></li>
                <% } else { %>
                    <li><a href="/leaderboard/<%= pages %>">Last</a></li>
                <% } %>
            </ul>
        <% } %>
        </section>
